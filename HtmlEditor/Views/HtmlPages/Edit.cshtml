@model HtmlEditor.Models.UpdateHtmlPage

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>HtmlPage</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="HtmlCode" class="control-label"></label>
                <textarea asp-for="HtmlCode" class="form-control">@Html.Raw(Model.HtmlCode)</textarea>
                <span asp-validation-for="HtmlCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('HtmlCode', {
            width: '70%',
            height: 500,
            removeButtons: 'PasteFromWord'
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
